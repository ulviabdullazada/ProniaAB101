
@{
    ViewData["Title"] = "Slider - Index";
}
@model IEnumerable<Slider>
<div class="container">
    <a class="btn btn-primary my-3" asp-action="Create">Create</a>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>PrimaryTitle</th>
                <th>SecondaryTitle</th>
                <th>Description</th>
                <th>ImageUrl</th>
                <th>Order</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.PrimaryTitle</td>
                    <td>@item.SecondaryTitle</td>
                    <td>@item.Description</td>
                    <td>@item.ImageUrl</td>
                    <td>@item.Order</td>
                    <td><a asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

